<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login.EnterpriseLoginActivity">

        <TextView
            android:id="@+id/login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="57dp"
            android:text="工程师登录"
            android:textColor="@color/color14"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="ENGINEER LOGIN"
        android:textColor="@color/color14"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/login"
        app:layout_constraintLeft_toLeftOf="parent"/>


        <TextView
            android:id="@+id/tv_phone_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="42dp"
            android:text="账号"
            android:textStyle="bold"
            android:textColor="@color/color14"
            android:textSize="16sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/login" />

        <EditText
            android:id="@+id/et_phone_num"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="8dp"
            android:background="@null"
            android:hint="请填写您的账号"
            android:textStyle="bold"
            android:maxLength="20"
            android:singleLine="true"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:textColor="@color/color33"
            android:textColorHint="@color/colorCF"
            android:textSize="14sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_phone_num" />

        <View
            android:id="@+id/divider_phone"
            style="@style/divider"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            app:layout_constraintLeft_toLeftOf="@+id/et_phone_num"
            app:layout_constraintRight_toRightOf="@+id/et_phone_num"
            app:layout_constraintTop_toBottomOf="@+id/et_phone_num" />

        <TextView
            android:id="@+id/passwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="25dp"
            android:text="密码"
            android:textStyle="bold"
            android:textColor="@color/color14"
            android:textSize="16sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divider_phone" />

        <EditText
            android:id="@+id/et_passwd"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="8dp"
            android:background="@null"
            android:hint="请填写您的密码"
            android:textStyle="bold"
            android:inputType="textPassword"
            android:maxLength="20"
            android:maxLines="1"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:layout_marginRight="20dp"
            android:textColor="@color/color33"
            android:textColorHint="@color/colorCF"
            android:textSize="14sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/passwd" />

        <View
            android:id="@+id/divider_passwd"
            style="@style/divider"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="4dp"
            app:layout_constraintLeft_toLeftOf="@+id/et_passwd"
            app:layout_constraintRight_toRightOf="@+id/et_passwd"
            app:layout_constraintTop_toBottomOf="@+id/et_passwd" />

        <Button
            android:id="@+id/bt_login"
            android:layout_width="0dp"
            android:layout_height="46dp"
            android:layout_marginLeft="19dp"
            android:layout_marginRight="19dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/login_btn_bg"
            android:text="登录"
            android:textStyle="bold"
            android:textColor="@color/colorFF"
            android:textSize="16sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divider_passwd" />

        <RelativeLayout
            android:id="@+id/rl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/bt_login"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/users_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="USERS LOGIN(用户登录)"
                android:autoLink="all"
                android:textColor="@color/login_btn_bg"
                android:layout_centerHorizontal="true"
                android:textSize="14sp"
                android:textStyle="bold"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="2sp"
                android:background="@color/login_btn_bg"
                android:layout_below="@id/users_login"
                android:layout_alignLeft="@id/users_login"
                android:layout_alignRight="@id/users_login"></View>
        </RelativeLayout>


        <TextView
            android:id="@+id/or"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="or"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/color33"
            app:layout_constraintTop_toBottomOf="@id/rl"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="43dp"/>

        <TextView
            android:id="@+id/register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="注册账号"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/color66"
            app:layout_constraintTop_toBottomOf="@id/or"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="41dp"/>

        <TextView
            android:id="@+id/forget_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="忘记密码?"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/color66"
            app:layout_constraintTop_toBottomOf="@id/register"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="37dp"/>


</android.support.constraint.ConstraintLayout>