<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorF6"
    android:orientation="vertical"
    tools:context="cn.dankal.my.activity.BankCardActivity">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/title_cl"
        android:layout_width="match_parent"
        android:layout_height="69dp"
        android:background="@color/colorFF">
        <ImageView
            android:id="@+id/back_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="23dp"
            android:layout_marginTop="37dp"
            android:src="@mipmap/ic_my_worklist_return"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="绑定银行卡"
            android:textColor="@color/color33"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </android.support.constraint.ConstraintLayout>

    <TextView
        android:id="@+id/enter_card_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="填写卡号"
        android:layout_marginTop="9dp"
        android:layout_marginLeft="23dp"/>

    <LinearLayout
        android:id="@+id/card_id_ll"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="9dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@color/colorFF">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="卡号"
            android:textColor="@color/color00"
            android:textSize="15sp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="16dp"/>

        <EditText
            android:id="@+id/card_id_et"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="请输入开户银行卡号"
            android:background="@null"
            android:layout_marginLeft="48dp"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="信息验证"
        android:layout_marginLeft="23dp"
        android:layout_marginTop="9dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="9dp"
        android:background="@color/colorFF">

        <RelativeLayout
            android:id="@+id/name_ll"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="9dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="@color/colorFF">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="姓名"
                android:textColor="@color/color00"
                android:textSize="15sp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"/>

            <EditText
                android:id="@+id/name_et"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="请输入您的真实姓名"
                android:background="@null"
                android:layout_marginLeft="93dp"
                android:layout_centerVertical="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/card_identity_ll"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="9dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="@color/colorFF">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="身份证"
                android:textColor="@color/color00"
                android:textSize="15sp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"/>

            <EditText
                android:id="@+id/card_identity_et"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="请输身份证号码"
                android:background="@null"
                android:layout_marginLeft="93dp"
                android:layout_centerVertical="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/phone_num_ll"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="9dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="@color/colorFF">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="手机号"
                android:textColor="@color/color00"
                android:textSize="15sp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"/>

            <EditText
                android:id="@+id/phone_num_et"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="请输入银行预留手机号"
                android:background="@null"
                android:layout_marginLeft="93dp"
                android:layout_centerVertical="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/code_ve_ll"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="9dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="@color/colorFF">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="验证码"
                android:textColor="@color/color00"
                android:textSize="15sp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"/>

            <EditText
                android:id="@+id/code_ve_et"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="请输入验证码"
                android:background="@null"
                android:layout_marginLeft="93dp"
                android:layout_centerVertical="true"/>

            <Button
                android:id="@+id/getVeCode_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="获取验证码"
                android:layout_marginRight="16dp"
                android:textColor="@color/login_btn_bg"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="#00ffffff"/>
        </RelativeLayout>

    </LinearLayout>

    <Button
        android:id="@+id/submit_btn"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@drawable/login_btn_bg"
        android:layout_marginRight="27dp"
        android:layout_marginLeft="27dp"
        android:layout_marginTop="35dp"
        android:text="@string/submit"
        android:textColor="@color/colorFF"
        android:textSize="16sp"/>

</LinearLayout>
