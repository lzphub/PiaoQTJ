<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorFF"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp">

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/color99"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="选择地区"
            android:textColor="@color/color14"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_save"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/login_btn_bg"
            android:textSize="14sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/colorE5" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.aigestudio.wheelpicker.WheelPicker
            android:id="@+id/province_wheel"
            android:layout_width="match_parent"
            android:layout_height="149dp"
            android:layout_weight="1"
            android:focusable="true"
            app:wheel_atmospheric="true"
            app:wheel_curved="true"
            app:wheel_cyclic="true"
            app:wheel_item_space="16dp"
            app:wheel_item_text_color="@color/colorE550"
            app:wheel_item_text_size="18sp"
            app:wheel_selected_item_text_color="@color/color14"
            app:wheel_visible_item_count="3" />

        <com.aigestudio.wheelpicker.WheelPicker
            android:id="@+id/city_wheel"
            android:layout_width="match_parent"
            android:layout_height="149dp"
            android:layout_weight="1"
            android:focusable="true"
            app:wheel_atmospheric="true"
            app:wheel_curved="true"
            app:wheel_cyclic="true"
            app:wheel_item_space="16dp"
            app:wheel_item_text_color="@color/colorE550"
            app:wheel_item_text_size="18sp"
            app:wheel_selected_item_text_color="@color/color14"
            app:wheel_visible_item_count="3" />
    </LinearLayout>

</LinearLayout>