<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="#F7F8FB">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="69dp"
        android:background="@color/colorFF">

        <ImageView
            android:id="@+id/back_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_my_worklist_return"
            android:layout_marginTop="37dp"
            android:layout_marginLeft="23dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <TextView
            android:id="@+id/title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MY REQUEST"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/color33"
            android:layout_marginTop="30dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>


    </android.support.constraint.ConstraintLayout>

    <com.flyco.tablayout.SlidingTabLayout
        android:id="@+id/tab_title"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:background="@color/colorFF"
        app:layout_constraintTop_toBottomOf="@id/back_img"
        app:tl_indicator_color="@color/login_btn_bg"
        app:tl_indicator_corner_radius="1dp"
        app:tl_indicator_height="2dp"
        app:tl_indicator_width="20dp"
        app:tl_tab_space_equal="true"
        app:tl_tab_width="93dp"
        app:tl_textBold="BOTH"
        app:tl_textSelectColor="@color/color33"
        app:tl_textUnselectColor="@color/color99"
        app:tl_textsize="14sp" />

    <android.support.v4.view.ViewPager
        android:id="@+id/tab_viewpager"
        android:layout_width="1dp"
        android:layout_height="1dp"/>

    <cn.dankal.basiclib.widget.swipetoloadlayout.SwipeToLoadLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/swipe_toload_layout">

        <include
            android:id="@+id/swipe_refresh_header"
            layout="@layout/layout_classic_header" />


        <cn.dankal.basiclib.base.recyclerview.del.DeleteRecyclerView
            android:id="@+id/swipe_target"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <include
            android:id="@id/swipe_load_more_footer"
            layout="@layout/layout_classic_footer" />
    </cn.dankal.basiclib.widget.swipetoloadlayout.SwipeToLoadLayout>

</LinearLayout>