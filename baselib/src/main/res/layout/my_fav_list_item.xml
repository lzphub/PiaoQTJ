<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="329dp"
    android:layout_height="365dp"
    android:id="@+id/item_layout"
    android:layout_marginBottom="17dp"
    android:layout_marginLeft="24dp"
    android:background="@color/colorF8"
    android:orientation="horizontal">

        <LinearLayout
            android:layout_width="329dp"
            android:layout_height="365dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:gravity="center">

                <ImageView
                    android:id="@+id/product_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <TextView
                android:id="@+id/product_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:text="$299"
                android:textColor="@color/login_btn_bg"
                android:textSize="40sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="12dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="TLON 886"
                android:textColor="@color/color33"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/product_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="12dp"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="4"
                android:text="Laser (NVC)led integrated ceiling lamp panel lamp flat panel lamp aluminum gusset"
                android:textColor="@color/color33"
                android:textSize="15sp"
                android:textStyle="bold" />

        </LinearLayout>

    <TextView
        android:id="@id/item_delete"
        android:layout_width="90dp"
        android:layout_height="365dp"
        android:layout_gravity="center"
        android:background="@drawable/rect_ed5855_solid_l10r10"
        android:elevation="2dp"
        android:gravity="center"
        android:text="DELETE"
        android:textColor="@color/colorFF"
        android:textStyle="bold" />
</LinearLayout>