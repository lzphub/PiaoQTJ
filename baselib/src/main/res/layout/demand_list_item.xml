<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="115dp"
    android:layout_marginBottom="21dp"
    android:background="@drawable/demand_item_bg"
    android:elevation="1dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="14dp"
            android:src="@mipmap/pic_home_money" />

        <TextView
            android:id="@+id/demand_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="43dp"
            android:layout_marginTop="10dp"
            android:text="$0~$260000"
            android:textColor="@color/color528e1a"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/re_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="13dp"
            android:text="2018-01-21"
            android:textColor="@color/colorAE"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/demand_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="40dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="大型工厂照明需求解决"
            android:textColor="@color/color33"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/demand_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/demand_title"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:text="新艺工厂，建筑面积600m2，现需要定制一套照明系统，大概600套"
            android:textColor="@color/color66"
            android:textSize="13sp" />
</RelativeLayout>