<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="191dp">

    <TextView
        android:id="@+id/request_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="23dp"
        android:layout_marginRight="23dp"
        android:layout_marginTop="15dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="Xinyi factory, with a building area of 600m2, now needs to customize"
        android:textColor="@color/color33"
        android:textSize="15sp"
        android:textStyle="bold" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/be_add_image"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/request_name"
        android:layout_marginLeft="11dp"
        android:layout_marginRight="23dp"
        android:layout_marginTop="11dp"></android.support.v7.widget.RecyclerView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/be_add_image"
        android:layout_marginLeft="23dp"
        android:layout_marginTop="13dp"
        android:text="PANGE OF PRICE"
        android:textColor="@color/color33"
        android:textSize="13sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/be_add_image"
        android:layout_marginLeft="23dp"
        android:layout_marginTop="37dp"
        android:text="PRODUCTION PERIOD"
        android:textColor="@color/color33"
        android:textSize="13sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/request_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/be_add_image"
        android:layout_marginRight="23dp"
        android:layout_marginTop="13dp"
        android:text="$150000~250000"
        android:textColor="@color/login_btn_bg"
        android:textSize="13sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/requect_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/request_price"
        android:layout_marginRight="23dp"
        android:layout_marginTop="8dp"
        android:text="2018-09-08~2019-10-12"
        android:textColor="@color/login_btn_bg"
        android:textSize="13sp"
        android:textStyle="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorCF"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>