<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_layout"
    android:layout_width="355dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp"
    android:layout_height="189dp"
    android:orientation="horizontal"
    android:elevation="1dp"
    android:background="@drawable/rect_whiteff_solid_l10r10">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="189dp">
        
        <View
            android:id="@+id/view"
            android:layout_width="11dp"
            android:layout_height="11dp"
            android:background="@color/login_btn_bg"
            android:layout_marginTop="11dp"
            android:layout_marginLeft="13dp"/>

        <TextView
            android:id="@+id/state_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="UNDELIVERED"
            android:layout_marginTop="10dp"
            android:layout_marginRight="13dp"
            android:textColor="@color/color33"
            android:textStyle="bold"
            android:textSize="11sp"/>

        <View
            android:layout_width="329dp"
            android:layout_height="2dp"
            android:background="@drawable/dotted_line"
            android:layout_below="@id/view"
            android:layout_marginRight="13dp"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="11dp"
            android:layerType="software"/>

        <TextView
            android:id="@+id/request_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="23dp"
            android:layout_marginRight="23dp"
            android:layout_marginTop="41dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="Xinyi factory, with a building area of 600m2, now needs to customize"
            android:textColor="@color/color33"
            android:textSize="15sp"
            android:textStyle="bold" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/be_add_image"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_below="@id/request_name"
            android:layout_marginLeft="11dp"
            android:layout_marginRight="23dp"
            android:layout_marginTop="6dp"></android.support.v7.widget.RecyclerView>

        <View
            android:layout_width="329dp"
            android:layout_height="2dp"
            android:background="@drawable/dotted_line"
            android:layout_below="@id/be_add_image"
            android:layout_marginRight="13dp"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="8dp"
            android:layerType="software"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/be_add_image"
            android:layout_marginLeft="23dp"
            android:layout_marginTop="15dp"
            android:text="PANGE OF PRICE"
            android:textColor="@color/color33"
            android:textSize="13sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/be_add_image"
            android:layout_marginLeft="23dp"
            android:layout_marginTop="34dp"
            android:text="PRODUCTION PERIOD"
            android:textColor="@color/color33"
            android:textSize="13sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/request_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/be_add_image"
            android:layout_marginRight="23dp"
            android:layout_marginTop="13dp"
            android:text="$150000~250000"
            android:textColor="@color/login_btn_bg"
            android:textSize="13sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/requect_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/request_price"
            android:layout_marginRight="23dp"
            android:layout_marginTop="4dp"
            android:text="2018-09-08~2019-10-12"
            android:textColor="@color/color33"
            android:textSize="13sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <TextView
        android:id="@id/item_delete"
        android:layout_width="90dp"
        android:layout_height="191dp"
        android:background="@drawable/rect_ed5855_solid_l10r10"
        android:layout_gravity="center"
        android:gravity="center"
        android:textStyle="bold"
        android:text="DELETE"
        android:textColor="@color/colorFF"
        android:elevation="2dp" />
</LinearLayout>