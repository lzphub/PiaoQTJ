<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="105dp"
    android:layout_height="160dp"
    android:orientation="vertical"
    android:layout_marginLeft="13dp"
    android:background="@drawable/rect_whiteff_solid_l10r10"
    android:elevation="1dp">

    <TextView
        android:id="@+id/rank_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/pic_profit_rankings_first"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="11dp"/>

    <cn.dankal.basiclib.widget.CircleImageView
        android:id="@+id/avatar"
        android:layout_width="59dp"
        android:layout_height="59dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="11dp"/>

    <TextView
        android:id="@+id/name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="侯锐锐"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/color66"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="11dp"/>

    <TextView
        android:id="@+id/add_balance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+3800"
        android:textColor="@color/color528e1a"
        android:textStyle="bold"
        android:textSize="14sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="4dp"/>
    
</LinearLayout>