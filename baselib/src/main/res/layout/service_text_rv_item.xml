<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="295dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp">

        <ImageView
            android:id="@+id/head_pic"
            android:layout_width="37dp"
            android:layout_height="37dp"
            android:src="@mipmap/ic_customerservice_addto"
            app:layout_constraintRight_toRightOf="parent" />

        <RelativeLayout
            android:layout_width="243dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="19dp"
            app:layout_constraintRight_toLeftOf="@id/head_pic">
            <TextView
                android:id="@+id/send_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="user send"
                android:textColor="@color/colorFF"
                android:textSize="14sp"
                android:background="@drawable/pic_customer_service_dialog_box_1"
                android:textStyle="bold"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="11dp" />

        </RelativeLayout>
    </android.support.constraint.ConstraintLayout>
</RelativeLayout>