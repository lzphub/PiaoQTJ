<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorFF">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="299dp"
            android:background="@mipmap/beijing"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="43dp"
                android:src="@mipmap/logo" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rl_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="184dp"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/rl_login"
                    android:layout_width="match_parent"
                    android:layout_height="241dp"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="15dp"
                    android:background="@mipmap/baidi"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <LinearLayout
                        android:id="@+id/ll_phone"
                        android:layout_width="300dp"
                        android:layout_height="34dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="61dp"
                        android:background="@drawable/login_edit_bg"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="16dp"
                            android:src="@mipmap/shoujiicon" />

                        <EditText
                            android:id="@+id/et_login_phone"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="10dp"
                            android:background="@null"
                            android:hint="请输入手机号"
                            android:inputType="number"
                            android:maxLength="11"
                            android:maxLines="1"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_pwd"
                        android:layout_width="300dp"
                        android:layout_height="34dp"
                        android:layout_below="@id/ll_phone"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="30dp"
                        android:background="@drawable/login_edit_bg"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="16dp"
                            android:src="@mipmap/suoicon" />

                        <EditText
                            android:id="@+id/et_login_pwd"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="10dp"
                            android:background="@null"
                            android:digits="@string/pwds"
                            android:hint="请输入密码（6-16位字符）"
                            android:maxLength="16"
                            android:maxLines="1"
                            android:password="true"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_fog_pwd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/ll_pwd"
                        android:layout_alignRight="@id/ll_pwd"
                        android:layout_marginTop="10dp"
                        android:text="忘记密码？"
                        android:textColor="@color/color32"
                        android:textSize="14sp" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_regist"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:background="@mipmap/baibeijing"
                    android:visibility="gone">

                    <LinearLayout
                        android:id="@+id/ll_regist_phone"
                        android:layout_width="300dp"
                        android:layout_height="34dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="61dp"
                        android:background="@drawable/login_edit_bg"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="16dp"
                            android:src="@mipmap/shoujiicon" />

                        <EditText
                            android:id="@+id/et_regist_phone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="10dp"
                            android:background="@null"
                            android:hint="请输入手机号"
                            android:inputType="number"
                            android:maxLength="11"
                            android:maxLines="1"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_regist_yzm"
                        android:layout_width="300dp"
                        android:layout_height="34dp"
                        android:layout_below="@id/ll_regist_phone"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="30dp"
                        android:background="@drawable/login_edit_bg"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="16dp"
                            android:src="@mipmap/yanzhangmaicon" />

                        <EditText
                            android:id="@+id/et_regist_yzm"
                            android:layout_width="168dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="10dp"
                            android:background="@null"
                            android:hint="请输入验证码"
                            android:inputType="number"
                            android:maxLength="11"
                            android:maxLines="1"
                            android:textSize="12sp" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_marginTop="4dp"
                            android:layout_marginBottom="4dp"
                            android:background="@color/colorb4" />

                        <Button
                            android:id="@+id/tv_getcode"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#00ffffff"
                            android:gravity="center"
                            android:text="获取验证码"
                            android:textColor="@color/colorFF5000"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_regist_pwd"
                        android:layout_width="300dp"
                        android:layout_height="34dp"
                        android:layout_below="@id/ll_regist_yzm"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="30dp"
                        android:background="@drawable/login_edit_bg"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="16dp"
                            android:src="@mipmap/suoicon" />

                        <EditText
                            android:id="@+id/et_regist_pwd"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="10dp"
                            android:background="@null"
                            android:hint="请输入密码（6-16位字符）"
                            android:digits="@string/pwds"
                            android:maxLength="16"
                            android:maxLines="1"
                            android:password="true"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_regist_subpwd"
                        android:layout_width="300dp"
                        android:layout_height="34dp"
                        android:layout_below="@id/ll_regist_pwd"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="30dp"
                        android:background="@drawable/login_edit_bg"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="16dp"
                            android:src="@mipmap/suoicon" />

                        <EditText
                            android:id="@+id/et_regist_subpwd"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="10dp"
                            android:background="@null"
                            android:hint="重复密码"
                            android:digits="@string/pwds"
                            android:maxLength="16"
                            android:maxLines="1"
                            android:password="true"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_regist_yqm"
                        android:layout_width="300dp"
                        android:layout_height="34dp"
                        android:layout_below="@id/ll_regist_subpwd"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="30dp"
                        android:background="@drawable/login_edit_bg"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="16dp"
                            android:src="@mipmap/tuijianmaicon" />

                        <EditText
                            android:id="@+id/et_regist_yqm"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="10dp"
                            android:background="@null"
                            android:hint="请输入推荐码"
                            android:maxLength="11"
                            android:maxLines="1"
                            android:textSize="12sp" />
                    </LinearLayout>
                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="84dp"
                    android:layout_marginRight="21dp"
                    android:text="登录"
                    android:textColor="@color/colorfe"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_regist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="84dp"
                    android:text="注册"
                    android:textColor="@color/colorfe"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/iv_login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_login"
                    android:layout_alignLeft="@id/tv_login"
                    android:layout_marginTop="10dp"
                    android:src="@mipmap/xuanzhong2" />

                <ImageView
                    android:id="@+id/iv_regist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_regist"
                    android:layout_alignLeft="@id/tv_regist"
                    android:layout_marginTop="10dp"
                    android:src="@mipmap/xuanzhong2"
                    android:visibility="gone" />
            </RelativeLayout>

            <Button
                android:id="@+id/bt_login"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_below="@id/rl_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/login_btn_bg"
                android:elevation="5dp"
                android:text="登录"
                android:textColor="@color/colorFF"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/bt_login"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="25dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_tip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="还没有账号？" />

                <TextView
                    android:id="@+id/tv_to_regist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="立即注册"
                    android:textColor="@color/colorFF5000" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</android.support.v4.widget.NestedScrollView>