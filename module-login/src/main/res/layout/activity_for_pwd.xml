<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".login.ForPwdActivity">

        <View
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:background="@drawable/title_bg"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/title_bg">

            <ImageView
                android:id="@+id/im_back"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:src="@mipmap/fanhui"
                android:scaleType="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="忘记密码"
                android:textColor="@color/colorfe"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_centerInParent="true"/>

        </RelativeLayout>

        <EditText
            android:id="@+id/et_phone"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/colorff"
            android:hint="请输入手机号码"
            android:paddingLeft="15dp"
            android:textSize="14sp"
            android:maxLength="11"
            android:paddingRight="15dp"
            android:inputType="number"
            android:textColor="@color/color97"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/colorff"
            android:layout_marginTop="1dp" >

            <Button
                android:id="@+id/tv_getCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:background="@drawable/getcode_bg"
                android:gravity="center"
                android:text="获取验证码"
                android:inputType="number"
                android:textColor="@color/colorff5000"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"/>

            <EditText
                android:id="@+id/et_code"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@id/tv_getCode"
                android:layout_marginRight="15dp"
                android:background="@null"
                android:hint="请输入验证码"
                android:textSize="14sp"
                android:maxLength="6"
                android:paddingLeft="15dp"
                android:textColor="@color/color97"/>

        </RelativeLayout>

        <EditText
            android:id="@+id/et_pwd"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/colorff"
            android:hint="请输入6-16位新密码"
            android:paddingLeft="15dp"
            android:textSize="14sp"
            android:maxLength="11"
            android:password="true"
            android:paddingRight="15dp"
            android:layout_marginTop="1dp"
            android:textColor="@color/color97"/>
        <EditText
            android:id="@+id/et_sub_pwd"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/colorff"
            android:hint="再次输入确认密码"
            android:paddingLeft="15dp"
            android:textSize="14sp"
            android:maxLength="11"
            android:password="true"
            android:layout_marginTop="1dp"
            android:paddingRight="15dp"
            android:textColor="@color/color97"/>

        <Button
            android:id="@+id/bt_res_pwd"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:background="@drawable/login_btn_bg"
            android:layout_marginTop="90dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:text="重置密码"
            android:textColor="@color/colorff"
            android:textSize="18sp"
            android:elevation="8dp"/>
</LinearLayout>