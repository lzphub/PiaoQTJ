<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorFF"
    android:scrollbars="none">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/logo_img"
            android:layout_width="120dp"
            android:layout_height="36dp"
            android:src="@mipmap/logo_1"
            android:layout_marginLeft="23dp"
            android:layout_marginTop="46dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/search_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="24dp"
            android:layout_marginTop="55dp"
            android:src="@mipmap/ic_home_search"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/release_ll"
            android:layout_width="126dp"
            android:layout_height="35dp"
            android:layout_marginRight="19dp"
            android:layout_marginTop="48dp"
            android:background="@drawable/release_home_bg"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintRight_toLeftOf="@id/search_img"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/res_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/ic_home_release"
                android:drawablePadding="7dp"
                android:text="发布"
                android:textStyle="bold"
                android:textColor="@color/colorE5" />

        </LinearLayout>

        <com.xuezj.cardbanner.CardBanner
            android:id="@+id/banner"
            android:layout_width="match_parent"
            android:layout_height="312dp"
            android:layout_marginTop="27dp"
            app:main_title_text_color="#fff"
            app:subtitle_title_text_color="#ffffffff"
            app:main_title_text_size="15dp"
            app:subtitle_title_text_size="12dp"
            app:border_width="30dp"
            app:divider_width="12dp"
            app:layout_constraintTop_toBottomOf="@id/release_ll"></com.xuezj.cardbanner.CardBanner>

        <TextView
            android:id="@+id/new_demand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="最新需求"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="@color/color33"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="23dp"
            app:layout_constraintTop_toBottomOf="@id/banner"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/demand_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginTop="21dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/new_demand"></android.support.v7.widget.RecyclerView>

        <TextView
            android:id="@+id/load_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="查看更多"
            android:layout_marginTop="17dp"
            android:textColor="@color/color33"
            android:textSize="15sp"
            android:drawableRight="@mipmap/ic_home_more"
            android:drawablePadding="7dp"
            app:layout_constraintTop_toBottomOf="@id/demand_list"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="24dp"
            app:layout_constraintTop_toBottomOf="@id/load_more"></View>

    </android.support.constraint.ConstraintLayout>
</android.support.v4.widget.NestedScrollView>
