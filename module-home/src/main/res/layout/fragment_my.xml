<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="218dp"
        android:background="@mipmap/pic_my_background">

        <ImageView
            android:id="@+id/my_news"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_my_news"
            android:layout_marginTop="48dp"
            android:layout_marginRight="33dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <cn.dankal.basiclib.widget.CircleImageView
            android:id="@+id/head_pic"
            android:layout_width="76dp"
            android:layout_height="76dp"
            android:layout_marginTop="78dp"
            android:layout_marginLeft="23dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <TextView
            android:id="@+id/my_postion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="91dp"
            android:layout_marginLeft="13dp"
            android:textColor="@color/colorFF"
            android:textSize="14sp"
            app:layout_constraintLeft_toRightOf="@id/head_pic"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/my_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="13dp"
            android:textColor="@color/colorFF"
            android:textSize="20sp"
            app:layout_constraintLeft_toRightOf="@id/head_pic"
            app:layout_constraintTop_toBottomOf="@id/my_postion"/>

    </android.support.constraint.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <android.support.constraint.ConstraintLayout
                android:id="@+id/my_worklist"
                android:layout_width="95dp"
                android:layout_height="95dp"
                android:layout_marginLeft="22dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/my_menu_bg">

                <ImageView
                    android:id="@+id/icon_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="13dp"
                    android:src="@mipmap/ic_my_worklist"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/menu_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="11dp"
                    android:text="我的工单"
                    android:textColor="@color/color33"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent" />

            </android.support.constraint.ConstraintLayout>

            <android.support.constraint.ConstraintLayout
                android:id="@+id/my_idea"
                android:layout_width="95dp"
                android:layout_height="95dp"
                android:layout_marginLeft="23dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/my_menu_bg">

                <ImageView
                    android:id="@+id/icon_img2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="13dp"
                    android:src="@mipmap/ic_my_idea"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/menu_text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="11dp"
                    android:text="我的创意"
                    android:textColor="@color/color33"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent" />

            </android.support.constraint.ConstraintLayout>

            <android.support.constraint.ConstraintLayout
                android:id="@+id/my_profit"
                android:layout_width="95dp"
                android:layout_height="95dp"
                android:layout_marginLeft="22dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/my_menu_bg">

                <ImageView
                    android:id="@+id/icon_img3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="13dp"
                    android:src="@mipmap/ic_my_profit"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/menu_text3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="11dp"
                    android:text="我的收益"
                    android:textColor="@color/color33"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent" />

            </android.support.constraint.ConstraintLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <android.support.constraint.ConstraintLayout
                android:id="@+id/customer"
                android:layout_width="95dp"
                android:layout_height="95dp"
                android:layout_marginLeft="22dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/my_menu_bg">

                <ImageView
                    android:id="@+id/icon_img4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="13dp"
                    android:src="@mipmap/ic_my_customerservice"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/menu_text4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="11dp"
                    android:text="客服中心"
                    android:textColor="@color/color33"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent" />

            </android.support.constraint.ConstraintLayout>

            <android.support.constraint.ConstraintLayout
                android:id="@+id/setting"
                android:layout_width="95dp"
                android:layout_height="95dp"
                android:layout_marginLeft="23dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/my_menu_bg">

                <ImageView
                    android:id="@+id/icon_img5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="13dp"
                    android:src="@mipmap/ic_my_setup"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/menu_text5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="11dp"
                    android:text="设置"
                    android:textColor="@color/color33"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent" />

            </android.support.constraint.ConstraintLayout>


        </LinearLayout>
    </LinearLayout>

</LinearLayout>
