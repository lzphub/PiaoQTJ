<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cn.dankal.home.activity.HomeActivity">

    <RadioGroup
        android:id="@+id/tab_rg"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_alignParentBottom="true"
        android:background="@color/colorFF"
        android:elevation="12dp"
        android:gravity="center"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/home_rbtn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="9dp"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:button="@null"
            android:checked="true"
            android:drawablePadding="1dp"
            android:drawableTop="@drawable/home_tab_selector"
            android:gravity="center"
            android:text="首页"
            android:textColor="@drawable/tab_home_textcolor_selector"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/release_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="9dp"
            android:layout_weight="1"
            android:button="@null"
            android:drawablePadding="3dp"
            android:drawableTop="@mipmap/ic_tab_release_dark"
            android:gravity="center"
            android:text="发布"
            android:textColor="@color/color66"
            android:textSize="11sp" />

        <RadioButton
            android:id="@+id/my_rbtn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="9dp"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:button="@null"
            android:drawablePadding="3dp"
            android:drawableTop="@drawable/home_tab_wd_selector"
            android:gravity="center"
            android:text="我的"
            android:textColor="@drawable/tab_home_textcolor_selector"
            android:textSize="11sp" />

    </RadioGroup>

    <FrameLayout
        android:id="@+id/home_fra"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/tab_rg"
        android:clipChildren="false"></FrameLayout>

</RelativeLayout>
