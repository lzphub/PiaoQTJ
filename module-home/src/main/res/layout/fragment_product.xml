<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorFF">

    <ImageView
        android:id="@+id/logo_img"
        android:layout_width="120dp"
        android:layout_height="36dp"
        android:layout_marginLeft="23dp"
        android:layout_marginTop="46dp"
        android:src="@mipmap/logo_1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/search_img"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="24dp"
        android:layout_marginTop="55dp"
        android:src="@mipmap/ic_home_search" />

    <LinearLayout
        android:id="@+id/need_ll"
        app:layout_constraintRight_toLeftOf="@id/search_img"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="164dp"
        android:layout_height="35dp"
        android:layout_marginRight="19dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/release_home_bg"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/res_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/ic_home_release"
            android:drawablePadding="7dp"
            android:text="I NEED A LIGHT"
            android:textSize="14sp"
            android:textColor="@color/colorE5"
            android:textStyle="bold" />

    </LinearLayout>

    <RadioGroup
        android:id="@+id/tab_rg"
        android:layout_width="121dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/colorF6"
        android:layout_marginTop="100dp"
        app:layout_constraintTop_toTopOf="parent">

    <RadioButton
        android:id="@+id/light_fix"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:button="@null"
        android:checked="true"
        android:gravity="center"
        android:background="@drawable/prodict_bg_textcolor_selector"
        android:text="LIGHT\nFIXTURES"
        android:textSize="13sp"
        android:textStyle="bold"
        android:textColor="@drawable/prodict_textcolor_selector"/>

        <RadioButton
            android:id="@+id/led_bulbs"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:button="@null"
            android:gravity="center"
            android:background="@drawable/prodict_bg_textcolor_selector"
            android:text="LED\nBULBS"
            android:textSize="13sp"
            android:textStyle="bold"
            android:textColor="@drawable/prodict_textcolor_selector"/>

        <RadioButton
            android:id="@+id/light_bulbs"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:button="@null"
            android:gravity="center"
            android:background="@drawable/prodict_bg_textcolor_selector"
            android:text="LIGHT\nBULBS"
            android:textSize="13sp"
            android:textStyle="bold"
            android:textColor="@drawable/prodict_textcolor_selector"/>

        <RadioButton
            android:id="@+id/christmas"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:button="@null"
            android:gravity="center"
            android:background="@drawable/prodict_bg_textcolor_selector"
            android:text="CHRISTMAS"
            android:textSize="13sp"
            android:textStyle="bold"
            android:textColor="@drawable/prodict_textcolor_selector"/>

        <RadioButton
            android:id="@+id/dricers"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:button="@null"
            android:gravity="center"
            android:background="@drawable/prodict_bg_textcolor_selector"
            android:text="DRIVERS AND \nCONTROLLER"
            android:textSize="13sp"
            android:textStyle="bold"
            android:textColor="@drawable/prodict_textcolor_selector"/>

        <RadioButton
            android:id="@+id/electrical"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:button="@null"
            android:gravity="center"
            android:background="@drawable/prodict_bg_textcolor_selector"
            android:text="ELECTRICAL"
            android:textSize="13sp"
            android:textStyle="bold"
            android:textColor="@drawable/prodict_textcolor_selector"/>

        <RadioButton
            android:id="@+id/rope"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:button="@null"
            android:gravity="center"
            android:background="@drawable/prodict_bg_textcolor_selector"
            android:text="ROPE AND \nTAPE LIGHT"
            android:textSize="13sp"
            android:textStyle="bold"
            android:textColor="@drawable/prodict_textcolor_selector"/>

        <RadioButton
            android:id="@+id/emetgency"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:button="@null"
            android:gravity="center"
            android:background="@drawable/prodict_bg_textcolor_selector"
            android:text="EXIT AND \nEMERGENCY"
            android:textSize="13sp"
            android:textStyle="bold"
            android:textColor="@drawable/prodict_textcolor_selector"/>

        <RadioButton
            android:id="@+id/specialty_items"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:button="@null"
            android:gravity="center"
            android:background="@drawable/prodict_bg_textcolor_selector"
            android:text="SPECIALTY \nITEMS"
            android:textSize="13sp"
            android:textStyle="bold"
            android:textColor="@drawable/prodict_textcolor_selector"/>
    </RadioGroup>

    <TextView
        android:id="@+id/list_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LIGHT FIXTURES"
        android:textColor="@color/color33"
        android:textStyle="bold"
        android:textSize="11sp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="25dp"
        app:layout_constraintLeft_toRightOf="@id/tab_rg"
        app:layout_constraintTop_toBottomOf="@id/need_ll"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/product_list"
        android:layout_width="255dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:overScrollMode="never"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/list_title"
        app:layout_constraintLeft_toRightOf="@id/tab_rg"></android.support.v7.widget.RecyclerView>

</android.support.constraint.ConstraintLayout>