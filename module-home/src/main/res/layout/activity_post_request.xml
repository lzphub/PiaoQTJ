<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rl_out"
    android:alpha="0.96"
    android:background="@color/colorFF"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <Button
        android:id="@+id/submit_btn"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_alignParentBottom="true"
        android:background="@color/login_btn_bg"
        android:text="SUBMIT"
        android:textColor="@color/colorFF"
        android:textSize="18sp"
        android:textStyle="bold" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/submit_btn">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/colse_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="23dp"
                android:layout_marginTop="29dp"
                android:src="@mipmap/ic_home_release_close"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/title_the"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="70dp"
                android:text="POST REQUEST"
                android:textColor="@color/color33"
                android:textSize="25sp"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="136dp"
                android:text="*TITLE"
                android:textColor="@color/color33"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/title_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="23dp"
                android:layout_marginTop="141dp"
                android:text="0/50"
                android:textColor="@color/color99"
                android:textSize="15sp"
                android:textStyle="bold"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/title_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginTop="11dp"
                android:background="@null"
                android:hint="PLEASE FILL IN YOUR TITLE"
                android:maxLength="50"
                android:textColorHint="@color/color99"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/title_size" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="85dp"
                android:text="ADD IMAGES"
                android:textColor="@color/color33"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/title_size" />

            <ImageView
                android:id="@+id/add_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="23dp"
                android:layout_marginTop="90dp"
                android:src="@mipmap/ic_release_uploadpicture"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/title_size" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/add_img_Rv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="11dp"
                android:layout_marginTop="13dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/add_img" />

            <TextView
                android:id="@+id/period_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="107dp"
                android:text="PRODUCTION PERIOD"
                android:textColor="@color/color33"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/add_img" />

            <EditText
                android:id="@+id/period_start"
                android:layout_width="136dp"
                android:layout_height="40dp"
                android:layout_marginLeft="23dp"
                android:layout_marginTop="12dp"
                android:background="@color/colorE5"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/period_text" />

            <View
                android:layout_width="26dp"
                android:layout_height="5dp"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="29dp"
                android:background="@color/colorE5"
                app:layout_constraintLeft_toRightOf="@id/period_start"
                app:layout_constraintTop_toBottomOf="@id/period_text" />

            <EditText
                android:id="@+id/period_end"
                android:layout_width="136dp"
                android:layout_height="40dp"
                android:layout_marginLeft="58dp"
                android:layout_marginTop="12dp"
                android:background="@color/colorE5"
                app:layout_constraintLeft_toRightOf="@id/period_start"
                app:layout_constraintTop_toBottomOf="@id/period_text" />

            <TextView
                android:id="@+id/price_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="35dp"
                android:text="RANGE OF PRICE"
                android:textColor="@color/color33"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/period_start" />

            <LinearLayout
                android:id="@+id/price_min_ll"
                android:layout_width="136dp"
                android:layout_height="40dp"
                android:layout_marginLeft="23dp"
                android:layout_marginTop="12dp"
                android:background="@color/colorE5"
                android:orientation="horizontal"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/price_text">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="$"
                    android:textColor="@color/color99"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/price_min"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="14dp"
                    android:background="@null"
                    android:hint="0"
                    android:inputType="numberDecimal"
                    android:textColor="@color/color99"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <View
                android:layout_width="26dp"
                android:layout_height="5dp"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="29dp"
                android:background="@color/colorE5"
                app:layout_constraintLeft_toRightOf="@id/price_min_ll"
                app:layout_constraintTop_toBottomOf="@id/price_text" />

            <LinearLayout
                android:id="@+id/price_max_ll"
                android:layout_width="136dp"
                android:layout_height="40dp"
                android:layout_marginLeft="58dp"
                android:layout_marginTop="12dp"
                android:background="@color/colorE5"
                android:orientation="horizontal"
                app:layout_constraintLeft_toRightOf="@id/price_min_ll"
                app:layout_constraintTop_toBottomOf="@id/price_text">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="$"
                    android:textColor="@color/color99"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/price_max"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="14dp"
                    android:background="@null"
                    android:hint="2500000"
                    android:inputType="numberDecimal"
                    android:textColor="@color/color99"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="23dp"
                android:layout_marginTop="33dp"
                android:text="*DEMAND CONTENT"
                android:textColor="@color/color33"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/price_min_ll" />

            <RelativeLayout
                android:id="@+id/rl_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/price_min_ll" >

                <EditText
                    android:id="@+id/content_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="23dp"
                    android:layout_marginTop="67dp"
                    android:layout_marginRight="23dp"
                    android:background="@null"
                    android:hint="PLEASE FILL IN THE REQUIREMENT."
                    android:textSize="20sp"
                    android:textStyle="bold"/>
            </RelativeLayout>
        </android.support.constraint.ConstraintLayout>

    </android.support.v4.widget.NestedScrollView>
</RelativeLayout>
