<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorFF"
    tools:context=".ProductDetailsActivity">

    <RelativeLayout
        android:id="@+id/title_rl"
        android:layout_width="match_parent"
        android:layout_height="69dp"
        android:background="#00000000">

        <ImageView
            android:id="@+id/back_img"
            android:layout_width="wrap_content"
            android:layout_height="49dp"
            android:layout_marginLeft="23dp"
            android:layout_marginTop="20dp"
            android:src="@mipmap/ic_my_worklist_return" />

        <ImageView
            android:id="@+id/coll_img"
            android:layout_width="wrap_content"
            android:layout_height="49dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="23dp"
            android:layout_marginTop="20dp"
            android:src="@mipmap/ic_home_details_like_unclicked" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="11dp"
            android:layout_marginTop="20dp"
            android:text="PRODUCT DETAILS"
            android:textColor="@color/color33"
            android:textSize="20sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/btn_ll"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/service_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/color33"
            android:text="SERVICE"
            android:textColor="@color/colorFF"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/purchase_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@color/login_btn_bg"
            android:text="PURCHASE INTENTION"
            android:textColor="@color/colorFF"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>

    <!--<android.support.design.widget.CoordinatorLayout-->
        <!--android:layout_width=""-->
        <!--android:layout_height=""></android.support.design.widget.CoordinatorLayout>-->
    <android.support.v4.widget.NestedScrollView
        android:id="@+id/content_scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/btn_ll"
        android:layout_below="@id/title_rl"
        android:overScrollMode="never"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.xuezj.cardbanner.CardBanner
                android:id="@+id/banner"
                android:layout_width="match_parent"
                android:layout_height="309dp"
                android:layout_gravity="center_horizontal"
                app:border_width="0dp"
                app:subtitle_title_text_color="#666666"
                app:subtitle_title_text_size="15sp" />

            <LinearLayout
                android:layout_width="350dp"
                android:layout_height="214dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:background="@drawable/product_screen_item_r5"
                android:elevation="15dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/product_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="17dp"
                    android:text="$388"
                    android:textColor="@color/login_btn_bg"
                    android:textSize="40sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/product_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="12dp"
                    android:text="BRUSHED"
                    android:textColor="@color/color33"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/product_content"
                    android:layout_width="match_parent"
                    android:layout_height="72dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="26dp"
                    android:layout_marginRight="26dp"
                    android:layout_marginTop="12dp"
                    android:gravity="center_horizontal"
                    android:text="OPPLE led energy-saving large screw household and commercial high power light source super bright E27 bulb E14 screw"
                    android:textColor="@color/color33"
                    android:textSize="15sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="40dp"
                android:src="@mipmap/pic_shop_title"/>

            <fm.jiecao.jcvideoplayer_lib.JCVideoPlayerStandard
                android:id="@+id/product_video"
                android:layout_width="330dp"
                android:layout_height="165dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"></fm.jiecao.jcvideoplayer_lib.JCVideoPlayerStandard>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/content_img_rv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"/>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</RelativeLayout>